<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <algorithm id="abc" class="boa.ABC">
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy" entityNumber="100">
                <entityType class="boa.bee.ParameterizedWorkerBee"/>
            </initialisationStrategy>
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition"/>
            <dancingSelectionStrategy class="util.selection.recipes.RankBasedSelector"/>
            <workerBeePercentage class="controlparameter.ConstantControlParameter" parameter="0.5"/>
            <forageLimit class="controlparameter.BoundedModifiableControlParameter" parameter="500" lowerBound="100" upperBound="800"/>
            <explorerBeeUpdateLimit class="controlparameter.BoundedModifiableControlParameter" lowerBound="1" upperBound="10"/>
        </algorithm>
    </algorithms>
    <problems>
        <problem id="spherical" class="problem.FunctionMinimisationProblem" domain="R(-5.12, 5.12)^30">
            <function class="functions.continuous.unconstrained.Spherical"/>
        </problem>
    </problems>
    <measurements id="fitness" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.single.Fitness"/>
        <addMeasurement class="measurement.single.diversity.AverageDiversityAroundAllEntities"/>
        <addMeasurement class="measurement.single.diversity.IndexBasedAverageDiversityAroundAllEntities"/>
    </measurements>
    <simulations>
        <simulation samples="10">
            <algorithm idref="abc"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
            <output format="TXT" file="data/bee_spherical3.txt"/>
        </simulation>
    </simulations>
</simulator>
