<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <algorithm id="de" class="ec.EC">
            <iterationStrategy class="ec.iterationstrategies.DifferentialEvolutionParameterizedIterationStrategy">
                <trialVectorCreationStrategy class="entity.operators.creation.RandPerDimensionCreationStrategy"/>
                <crossoverStrategy class="entity.operators.crossover.BlendCrossoverStrategy"/>
                <targetVectorSelectionStrategy class="util.selection.recipes.RankBasedSelector"/>
                <parameterTrialVectorCreationStrategy class="entity.operators.creation.RandToBestCreationStrategy"/>
                <parameterCrossoverStrategy class="entity.operators.crossover.UniformCrossoverStrategy"/>
                <parameterTargetVectorSelectionStrategy class="util.selection.recipes.RingBasedPopulationSelector"/>
                <boundaryConstraint class="problem.boundaryconstraint.ClampingBoundaryConstraint"/>
            </iterationStrategy>
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityNumber value="50"/>
                <entityType class="ec.ParameterizedDEIndividual">
                    <scalingFactor class="controlparameter.BoundedModifiableControlParameter" lowerBound="0.5" upperBound="0.9"/>
                    <recombinationProbability class="controlparameter.BoundedModifiableControlParameter" lowerBound="0.2" upperBound="0.7"/>
                </entityType>
            </initialisationStrategy>
            <addStoppingCondition class="stoppingcondition.MeasuredStoppingCondition" target="5000"/>
        </algorithm>
    </algorithms>
    <problems>
        <problem id="spherical" class="problem.FunctionMinimisationProblem" domain="R(-5.12,5.12)^30">
            <function class="functions.continuous.unconstrained.Spherical"/>
        </problem>
    </problems>
    <measurements id="measurements" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.single.Fitness"/>
        <addMeasurement class="measurement.single.diversity.AverageDiversityAroundAllEntities"/>
        <addMeasurement class="measurement.single.diversity.IndexBasedAverageDiversityAroundAllEntities" index="10"/>
    </measurements>
    <simulations>
        <simulation samples="30">
            <algorithm idref="de"/>
            <problem idref="spherical"/>
            <measurements idref="measurements" />
            <output format="TXT" file="data/7.txt"/>
        </simulation>
    </simulations>
</simulator>
