<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>
    <algorithms>
        <algorithm id="kmeans.random" class="clustering.kmeans.KMeans">
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="100"/>
        </algorithm>

        <algorithm id="kmeans.biased" class="clustering.kmeans.KMeans">
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="100"/>
            <centroidsInitialisationStrategy class="clustering.kmeans.DataSetBasedCentroidsInitialisationStrategy"/>
        </algorithm>

        <algorithm id="kmeans.potential" class="clustering.kmeans.KMeans">
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="100"/>
            <centroidsInitialisationStrategy class="clustering.kmeans.ContributingPotentialCentroidsInitialisationStrategy"/>
            <centroidsDiversificationStrategy class="clustering.kmeans.StandardCentroidsDiversificationStrategy" interval="1" diversifyRatio="0.1" />
        </algorithm>
    </algorithms>

    <problems>
        <problem id="artificial" class="problem.clustering.PartitionalClusteringProblem" domain="R(-1.0,1.0),R(-1.0,1.0)">
            <clusteringFunction class="functions.clustering.QuantisationErrorFunction" />
            <dataTableBuilder class="io.DataTableBuilder">
	        <dataReader class="io.DelimitedTextFileReader" sourceURL="../../datasets/generated/artificial2/artificial.txt" delimiter="\s+" />
		<addDataOperator class="io.transform.TypeConversionOperator" />
		<addDataOperator class="io.transform.PatternConversionOperator" classIndex="2" classLength="1" />
            </dataTableBuilder>
        </problem>
    </problems>

    <measurements id="measurements" class="simulator.MeasurementSuite" resolution="1">
        <addMeasurement class="measurement.single.Fitness" />
        <addMeasurement class="measurement.single.clustering.PlotClustersAndCentroids" />
<!--
        <addMeasurement class="measurement.single.clustering.PlotHighDimensionalClustersAndCentroids" />
-->
    </measurements>

    <simulations>
        <simulation samples="1">
            <algorithm idref="kmeans.random"/>
            <problem idref="artificial" numberOfClusters="4" />
            <measurements idref="measurements" />
            <output format="TXT" file="measurements/kmeans.random.artificial.4.txt" />
        </simulation>

        <simulation samples="1">
            <algorithm idref="kmeans.biased"/>
            <problem idref="artificial" numberOfClusters="4" />
            <measurements idref="measurements" />
            <output format="TXT" file="measurements/kmeans.biased.artificial.4.txt" />
        </simulation>

        <simulation samples="1">
            <algorithm idref="kmeans.potential"/>
            <problem idref="artificial" numberOfClusters="4" />
            <measurements idref="measurements" />
            <output format="TXT" file="measurements/kmeans.potential.artificial.4.txt" />
        </simulation>
    </simulations>
</simulator>
