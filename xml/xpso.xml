<?xml version="1.0"?>
<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>
<simulator>
    <algorithms>
        <!--Crossover iteration strategy-->
        <algorithm id="xpso-1" class="pso.PSO">
            <iterationStrategy class="pso.iterationstrategies.PSOCrossoverIterationStrategy"/>
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="1000"/>
        </algorithm>
        
        <!--Crossover velocity provider-->
        <algorithm id="xpso-2" class="pso.PSO">
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType class="pso.particle.StandardParticle">
                    <particleBehavior class="pso.particle.ParticleBehavior">
                        <positionProvider class="pso.positionprovider.LinearPositionProvider"/>
                        <velocityProvider class="pso.velocityprovider.CrossoverVelocityProvider"/>
                    </particleBehavior>
                </entityType>
            </initialisationStrategy>
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="1000"/>
        </algorithm>
        
        <!--Crossover gBest guide provider-->
        <algorithm id="xpso-3" class="pso.PSO">
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType class="pso.particle.StandardParticle">
                    <particleBehavior class="pso.particle.ParticleBehavior">
                        <globalGuideProvider class="pso.guideprovider.CrossoverGuideProvider"/>
                    </particleBehavior>
                </entityType>
            </initialisationStrategy>
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="1000"/>
        </algorithm>
        
        <!--XPSO all-->
        <algorithm id="xpso-4" class="pso.PSO">
            <iterationStrategy class="pso.iterationstrategies.PSOCrossoverIterationStrategy"/>
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy">
                <entityType class="pso.particle.StandardParticle">
                    <particleBehavior class="pso.particle.ParticleBehavior">
                        <globalGuideProvider class="pso.guideprovider.CrossoverGuideProvider"/>
                        <positionProvider class="pso.positionprovider.LinearPositionProvider"/>
                        <velocityProvider class="pso.velocityprovider.CrossoverVelocityProvider"/>
                    </particleBehavior>
                </entityType>
            </initialisationStrategy>
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="1000"/>
        </algorithm>
    </algorithms>
    
    <problems>
        <problem id="spherical" class="problem.FunctionMinimisationProblem" domain="R(-5.12, 5.12)^30">
            <function class="functions.continuous.unconstrained.Spherical"/>
        </problem>
    </problems>
    
    <measurements id="fitness" class="simulator.MeasurementSuite" resolution="10">
        <addMeasurement class="measurement.single.Fitness"/>
    </measurements>
    <simulations>
        <simulation samples="50">
            <algorithm idref="xpso-1"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
	        <output format="TXT" file="data/xpso-1-spherical.txt" />
        </simulation>
        <simulation samples="50">
            <algorithm idref="xpso-2"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
	        <output format="TXT" file="data/xpso-2-spherical.txt" />
        </simulation>
        <simulation samples="50">
            <algorithm idref="xpso-3"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
	        <output format="TXT" file="data/xpso-3-spherical.txt" />
        </simulation>
        <simulation samples="50">
            <algorithm idref="xpso-4"/>
            <problem idref="spherical"/>
            <measurements idref="fitness" />
	        <output format="TXT" file="data/xpso-4-spherical.txt" />
        </simulation>
    </simulations>
</simulator>
