<?xml version="1.0"?>

<!DOCTYPE simulator [
<!ATTLIST algorithm id ID #IMPLIED>
<!ATTLIST problem id ID #IMPLIED>
<!ATTLIST measurements id ID #IMPLIED>
]>

<simulator>
    <algorithms>
        <algorithm id="pso" class="pso.PSO">
            <addStoppingCondition class="stoppingcondition.MaximumIterations" maximumIterations="100" />
            <initialisationStrategy class="algorithm.initialisation.ClonedPopulationInitialisationStrategy" entityNumber="50">
                <entityType class="pso.particle.StandardParticle" />
            </initialisationStrategy>
            <iterationStrategy class="pso.iterationstrategies.SynchronousIterationStrategy">
                <boundaryConstraint class="problem.boundaryconstraint.BouncingBoundaryConstraint"/>
            </iterationStrategy>
        </algorithm>
    </algorithms>

    <problems>
        <problem id="artificial.harmonic" class="problem.clustering.PartitionalClusteringProblem" domain="R(-1.0,1.0)^2">
            <clusteringFunction class="functions.clustering.KHarmonicMeansFunction" />
            <dataTableBuilder class="io.DataTableBuilder">
                <dataReader class="io.DelimitedTextFileReader" sourceURL="../../datasets/generated/artificial2/artificial.txt" delimiter="\s+" />
                <addDataOperator class="io.transform.TypeConversionOperator" />
                <addDataOperator class="io.transform.PatternConversionOperator" classIndex="2" classLength="1"/>
            </dataTableBuilder>
        </problem>

        <problem id="artificial.inverse" class="problem.clustering.PartitionalClusteringProblem" domain="R(-1.0,1.0)^2">
            <clusteringFunction class="functions.clustering.InverseErrorFunction" />
            <fitnessFactory class="problem.fitnessfactory.MaximisationFitnessFactory" />
            <dataTableBuilder class="io.DataTableBuilder">
                <dataReader class="io.DelimitedTextFileReader" sourceURL="../../datasets/generated/artificial2/artificial.txt" delimiter="\s+" />
                <addDataOperator class="io.transform.TypeConversionOperator" />
                <addDataOperator class="io.transform.PatternConversionOperator" classIndex="2" classLength="1"/>
            </dataTableBuilder>
        </problem>
    </problems>

    <measurements id="measurements" class="simulator.MeasurementSuite" resolution="1">
        <addMeasurement class="measurement.single.Fitness" />
        <addMeasurement class="measurement.single.clustering.PlotClustersAndCentroids" />
<!--
        <addMeasurement class="measurement.single.clustering.PlotHighDimensionalClustersAndCentroids" />
        <addMeasurement class="measurement.single.clustering.DataSetDiameter" />
        <addMeasurement class="measurement.single.clustering.SearchSpaceDiameter" />
        <addMeasurement class="measurement.single.clustering.ClusterVariances" />
        <addMeasurement class="measurement.single.clustering.ClusterStandardDeviations" />
        <addMeasurement class="measurement.single.clustering.ClusterMeans" />
        <addMeasurement class="measurement.single.clustering.ClusterCentroids" />
-->
    </measurements>

    <simulations>
        <simulation samples="1">
            <algorithm idref="pso"/>
            <problem idref="artificial.harmonic" numberOfClusters="4" />
            <measurements idref="measurements" />
            <output format="TXT" file="measurements/pso.artificial.harmonic.4.txt" />
        </simulation>

        <simulation samples="1">
            <algorithm idref="pso"/>
            <problem idref="artificial.inverse" numberOfClusters="4" />
            <measurements idref="measurements" />
            <output format="TXT" file="measurements/pso.artificial.inverse.4.txt" />
        </simulation>
    </simulations>
</simulator>
